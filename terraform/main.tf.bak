terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "us-east-1"
}

# 1. Create a VPC for the Cluster
module "vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "5.0.0"

  name = "dynamic-pods-vpc"
  cidr = "10.0.0.0/16"

  azs             = ["us-east-1a", "us-east-1b"]
  private_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
  public_subnets  = ["10.0.101.0/24", "10.0.102.0/24"]

  enable_nat_gateway = true
  single_nat_gateway = true

  tags = {
    Environment = "dev"
    Project     = "dynamic-pod-lifecycle"
  }
}

# 2. Create the EKS Cluster
module "eks" {
  source  = "terraform-aws-modules/eks/aws"
  version = "19.15.3"

  cluster_name    = "dynamic-lifecycle-cluster"
  cluster_version = "1.27"

  vpc_id                         = module.vpc.vpc_id
  subnet_ids                     = module.vpc.private_subnets
  cluster_endpoint_public_access = true

  # 3. Define Worker Node Groups (Compute Resources)
  eks_managed_node_groups = {
    general = {
      min_size     = 1
      max_size     = 5 # Allows cluster autoscaler to scale up for new user pods
      desired_size = 2

      instance_types = ["t3.medium"]
      capacity_type  = "ON_DEMAND"
    }
  }

  tags = {
    Environment = "dev"
    Terraform   = "true"
  }
}

# 4. Output the Command to Connect
output "configure_kubectl" {
  description = "Configure kubectl: aws eks --region us-east-1 update-kubeconfig --name dynamic-lifecycle-cluster"
  value       = "aws eks --region us-east-1 update-kubeconfig --name ${module.eks.cluster_name}"
}